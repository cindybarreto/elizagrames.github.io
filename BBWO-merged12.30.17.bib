@Article{Latif2016,
  author        = {Latif, Q.S. and Sanderlin, J.S. and Saab, V.A. and Block, W.M. and Dudley, J.G.},
  title         = {Avian relationships with wildfire at two dry forest locations with different historical fire regimes},
  journal       = {Ecosphere},
  year          = {2016},
