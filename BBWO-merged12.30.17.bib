@Article{Dawson2006,
  author        = {Dawson, R.D. and Bortolotti, G.R.},
  title         = {Fire in the boreal forest: Proximate effects on reproduction and long-term consequences for territory occupancy of American kestrels},
  journal       = {Ecoscience},
