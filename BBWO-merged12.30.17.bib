@Article{Stojanovic2016,
  author        = {Stojanovic, D. and Webb nee Voogdt, J. and Webb, M. and Cook, H. and Heinsohn, R.},
  title         = {Loss of habitat for a secondary cavity nesting bird after wildfire},
  journal       = {Forest Ecology and Management},
